<section id="create-container">
    <div class="create-container-info">
        <h1>Create Announcement</h1>
        <h4>Post your coins to sell</h4>
        <form  method="POST">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{data.name}}" >
            <label>Image:</label>
            <input type="text" id="image" name="image" value="{{data.image}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{data.price}}">
            <label>Description:</label>
            <textarea name="description"
                id="description">{{data.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="paymentMethod">
                <option value="crypto-wallet">Crypto Wallet</option>
                <option value="credit-card">Credit Card</option>
                <option value="debit-card">Debit Card</option>
                <option value="paypal">PayPal</option>
            </select>
            <input type="submit" id="btn" value="TRADE"></input>
        </form>
    </div>
</section>