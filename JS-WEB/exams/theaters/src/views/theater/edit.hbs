<form class="theater-form" method="POST">
    <h1>Edit Theater</h1>
    <div>
        <label for="title">Theater Title:</label>
        <input type="text" placeholder="Theater name" value="{{data.title}}" name="title"/>
    </div>
    <div>
        <label for="description">Theater Description:</label>
        <textarea placeholder="Description" name="description">{{data.description}}</textarea>
    </div>
    <div>
        <label for="imageUrl">Image url:</label>
        <input type="text" placeholder="Image Url" value="{{data.image}}"  name="image" />
    </div>
    <div class="check">
        <input type="checkbox" id="check-box" name="isPublic" {{#if data.isPublic}} checked {{/if}} />
        <label for="check-box">Public</label>
    </div>
    <button class="btn" type="submit">Submit</button>
</form>
