<main>
    <form class="search" action="/offer/search" method="GET">
        <input type="search" name="search" placeholder="Search here..." value="{{search}}">
        <button type="submit" value="search">Search</button>
    </form>
    <section id="find-section">
            {{#if start}}
            {{#each result}}
                {{>housingCard}}
            {{else}}
                <div class="no-data-listing">
                    <p class="no-offer">No match was found for the submitted type...</p>
                </div>
            {{/each}}
            {{/if}}
    </section>
</main>