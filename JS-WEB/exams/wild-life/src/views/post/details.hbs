<section id="details-page">
    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">
                <h1>Title: {{title}}</h1>
                <h3>Created by an author: {{fullName}}</h3>
                <div class="card_animal">
                    <p class="card-keyword">Keyword: {{keyword}}</p>
                    <p class="card-location">Location: {{location}}</p>
                    <p class="card-date">Date: {{dateOfCreation}}</p>
                </div>

                <p class="disc">
                    Description: {{description}}
                </p>

                <!-- If there is no registered user, do not display buttons-->
                {{#if user}}
                <div class="social-btn">
                    <!-- Only for registered user and author of the post -->
                    {{#if isAuthor}}
                    <a href="/post/{{_id}}/edit" class="edit-btn">Edit</a>
                    <a href="/post/{{_id}}/delete" class="del-btn">Delete</a>
                    {{else}}
                    <!-- logged in users, who have not yet voted-->
                    {{#if hasVoted}}
                    <!-- logged in user who has already voted-->
                    <p class="thanks-for-vote">Thanks For Voting</p>
                    {{else}}
                    <a href="/post/{{_id}}/voteUp" class="vote-up">UpVote +1</a>
                    <a href="/post/{{_id}}/voteDown" class="vote-down">DownVote -1</a>
                    {{/if}}
                    {{/if}}
                </div>
                {{/if}}
            </div>
        </div>
        <div class="card_right">
            <img src="{{image}}" alt="image" />
        </div>
    </div>
</section>

<section id="votes">
    <div class="vote-info">
        <div class="card_left">
            <div class="card_datails">
                <h1>Votes</h1>
                <div class="card_vote">
                    <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                    <p class="PV">Total rating of votes: {{ratingOnPost}}</p>
                </div>
                <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
                {{#if isVoted}}
                <p class="disc">People who voted for the post - {{userEmails}}</p>
                {{else}}
                <!-- If not display: -->
                <p class="disc">
                    People who voted for the post - No one has voted yet.
                </p>
                {{/if}}
            </div>
        </div>
    </div>
</section>
