<div class="container">
    <h1 class="my-4">Title : {{title}}</h1>

    <div class="row">
        <div class="col-md-8">
            <img class="img-fluid" src="{{image}}" alt="JavaScript" />
        </div>

        <div class="col-md-4 text-center">
            <h4 class="my-3">Duration</h4>
            <p>{{duration}} weeks</p>
            <h3 class="my-3">Description</h3>
            <p>{{description}}</p>
            {{#if isOwner}}
                <a class="btn btn-danger" href="/course/{{_id}}/delete">Delete</a>
                <a class="btn btn-warning" href="/course/{{_id}}/edit">Edit</a>
            {{else}}
                {{#if hasEnrolled}}
                    <span class="enrolled-span">You are already enrolled</span>
                {{else}}
                    <a class="btn btn-primary" href="/course/{{_id}}/enroll">Enroll</a>
                {{/if}}
            {{/if}}
        </div>
    </div>
</div>
