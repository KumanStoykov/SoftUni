<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <!-- Do not forget to change the path to the css file -->
        <link
            rel="stylesheet"
            href="/css/style.css"
            
        />
        <title>{{title}}</title>
    </head>

    <body>
        {{#if errors}}
            <div class="error">
                {{#each errors}}    
                        <p>{{this}}</p>            
                {{/each}}
            </div>
        {{/if}}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container">
                <!-- Do not forget to change the path to the images -->
                <img
                    class="logo"
                    src="/images/before.png"
                    alt="before-logo"
                />
                <img
                    class="car logo"
                    src="/images/trip-logo.png"
                    alt="trip-logo"
                />
                <img
                    class="logo"
                    src="/images/after.png"
                    alt="after-logo"
                />
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <!-- Guest users and Logged users -->
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/trip/shared">Shared Trips</a>
                        </li>
                        {{#if user}}
                        <li class="nav-item">
                            <a class="nav-link" href="/trip/offer">Offer Trip</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/logout"
                                >Logout as [ {{user.email}} ]</a
                            >
                        </li>
                        {{else}}
                        <li class="nav-item">
                            <a class="nav-link" href="/user/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/register">Register</a>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </nav>

        <main>{{{body}}}</main>

        <footer id="sticky-footer" class="bg-dark">
            <div class="container">
                <p class="m-0 text-center text-white">
                    Copyright &copy; Shared Trip 2021
                </p>
            </div>
        </footer>
    </body>
</html>
